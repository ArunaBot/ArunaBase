{
  "allowSyntheticDefaultImports": true,
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "strict": true,
    "lib": ["ES6", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020", "ES2021","ES2022", "ESNext"],
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowJs": true,
    "removeComments": false,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "build/",
    "types": ["node", "discord.js"],
    "noImplicitAny": true
  },
  "exclude": ["node_modules", "src/tests"]
}
